\newcommand{\ifthen}[2]{\ifthenelse{#1}{#2}{}}

%guarda el parindent viejo para reestablecerlo.  No usar mas de una vez.
\newlength{\tad@oldparindent}
\newcommand{\tad@parindent}[1]{%
    \setlength{\tad@oldparindent}{\parindent}%
